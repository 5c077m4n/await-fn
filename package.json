{
	"name": "await-fn",
	"version": "1.3.7",
	"description": "A tiny package to await a classic function (and now even more).",
	"keywords": [
		"await",
		"function",
		"async",
		"backend"
	],
	"homepage": "https://5c077m4n.github.io/await-fn/",
	"bugs": {
		"url": "https://github.com/5c077m4n/await-fn/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/5c077m4n/await-fn.git"
	},
	"license": "MIT",
	"author": "Roee Shapira",
	"sideEffects": false,
	"type": "module",
	"exports": {
		"import": "./packages/await-fn/src/index.mjs",
		"require": "./packages/await-fn/src/index.cjs/",
		"umd": "./packages/await-fn/src/index.umd.js"
	},
	"main": "./packages/await-fn/src/index.cjs",
	"module": "./packages/await-fn/src/index.mjs",
	"files": [
		"packages/await-fn/src/**/*"
	],
	"scripts": {
		"bootstrap": "lerna bootstrap --hoist --force-local",
		"build": "rollup -c ./rollup.config.js",
		"clean:all": "lerna run clean",
		"lint": "eslint src/**/*.js --fix",
		"prepare": "run-s bootstrap lint clean:all build test",
		"test": "jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged --allow-empty",
			"pre-push": "run-s lint build test"
		}
	},
	"lint-staged": {
		"**/package.json": [
			"sort-package-json"
		],
		"*.js": [
			"eslint src/**/*.js --fix"
		],
		"*.{js,css,json,md}": [
			"prettier --write src/**/*.js"
		]
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/core": "^7.11.1",
		"@babel/preset-env": "^7.11.0",
		"babel-jest": "^25.5.1",
		"babel-loader": "^8.1.0",
		"chai": "^4.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"esm": "^3.2.25",
		"husky": "^4.2.5",
		"jest": "^26.4.1",
		"lerna": "^3.22.1",
		"lint-staged": "^10.2.11",
		"mocha": "^7.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.2",
		"rollup": "^1.32.1",
		"rollup-plugin-terser": "^7.0.0",
		"sort-package-json": "^1.44.0",
		"ts-jest": "^26.2.0",
		"typescript": "^3.9.7"
	}
}
