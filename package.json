{
	"name": "await-fn",
	"version": "1.3.7",
	"description": "A tiny package to await a classic function (and now even more).",
	"keywords": [
		"await",
		"function",
		"async",
		"backend"
	],
	"homepage": "https://5c077m4n.github.io/await-fn/",
	"bugs": {
		"url": "https://github.com/5c077m4n/await-fn/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/5c077m4n/await-fn.git"
	},
	"license": "MIT",
	"author": "Roee Shapira",
	"sideEffects": false,
	"type": "module",
	"exports": {
		"import": "./src/index.js",
		"require": "./packages/await-fn.cjs/"
	},
	"main": "./packages/await-fn.cjs/src/index.js",
	"module": "./src/index.js",
	"files": [
		"packages/**/*",
		"src/**/*"
	],
	"scripts": {
		"build": "rollup -c ./rollup.config.js",
		"clean:all": "lerna run clean",
		"lint": "eslint ./src/**/*.js --fix",
		"lint:staged": "lint-staged",
		"prepare": "run-s lint clean:all build test",
		"test": "jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "run-s lint build test"
		}
	},
	"lint-staged": {
		"**/package.json": [
			"sort-package-json",
			"git add"
		],
		"*.js": [
			"eslint ./src/**/*.js --fix",
			"git add"
		],
		"*.{js,css,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"babel-jest": "^25.3.0",
		"babel-loader": "^8.1.0",
		"chai": "^4.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-prettier": "^3.1.3",
		"esm": "^3.2.25",
		"husky": "^4.2.5",
		"jest": "^25.3.0",
		"lerna": "^3.20.2",
		"lint-staged": "^10.1.3",
		"mocha": "^7.1.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.2",
		"rollup": "^1.32.1",
		"rollup-plugin-terser": "^5.3.0",
		"sort-package-json": "^1.41.0",
		"ts-jest": "^25.3.1",
		"typescript": "^3.8.3"
	}
}
