{
	"name": "await-fn",
	"version": "1.3.2",
	"description": "A tiny package to await a classic function (and now even more).",
	"type": "module",
	"main": "./packages/await-fn.cjs/src/index.js",
	"module": "./src/index.js",
	"exports": {
		"require": "./packages/await-fn.cjs/",
		"default": "./src/index.js"
	},
	"sideEffects": false,
	"scripts": {
		"clean:all": "lerna run clean",
		"test": "mocha --require esm ./__test__/**/*.spec.js",
		"lint": "eslint ./src/**/*.js --fix",
		"lint:staged": "lint-staged",
		"build": "rollup -c",
		"prepare": "run-s lint clean:all build test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/5c077m4n/await-fn.git"
	},
	"keywords": [
		"await",
		"function",
		"async",
		"backend"
	],
	"author": "Roee Shapira",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/5c077m4n/await-fn/issues"
	},
	"homepage": "https://5c077m4n.github.io/await-fn/",
	"dependencies": {},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^6.0.0",
		"babel-loader": "^8.0.6",
		"chai": "^4.2.0",
		"eslint": "^6.7.2",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-prettier": "^3.1.1",
		"esm": "^3.2.25",
		"husky": "^3.1.0",
		"lerna": "^3.19.0",
		"lint-staged": "^9.5.0",
		"mocha": "^6.2.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.0",
		"rollup": "^1.27.10"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "run-s lint test"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint ./src/**/*.js --fix",
			"git add"
		],
		"*.{js,css,json,md}": [
			"prettier --write",
			"git add"
		]
	}
}
